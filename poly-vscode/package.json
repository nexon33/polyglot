{
    "name": "poly-vscode",
    "displayName": "Polyglot Language Support",
    "description": "Language support for Polyglot (.poly) files with GridMesh safety.",
    "version": "0.1.0",
    "publisher": "pyrs",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "polyglot",
                "aliases": [
                    "Polyglot",
                    "poly"
                ],
                "extensions": [
                    ".poly"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "polyglot",
                "scopeName": "source.polyglot",
                "path": "./syntaxes/polyglot.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.rust": "rust",
                    "meta.embedded.python": "python"
                }
            }
        ],
        "configuration": {
            "title": "Polyglot",
            "properties": {
                "polyglot.serverPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to poly-lsp. Leave empty to use bundled binary."
                },
                "polyglot.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the polyglot language server."
                }
            }
        },
        "commands": [
            {
                "command": "polyglot.build",
                "title": "Polyglot: Build Current File"
            },
            {
                "command": "polyglot.run",
                "title": "Polyglot: Run Current File"
            },
            {
                "command": "polyglot.check",
                "title": "Polyglot: Check Current File"
            },
            {
                "command": "polyglot.init",
                "title": "Polyglot: Initialize Project"
            },
            {
                "command": "polyglot.test",
                "title": "Polyglot: Run Tests"
            },
            {
                "command": "polyglot.toggleView",
                "title": "Polyglot: Toggle Combined/Split View",
                "icon": "$(split-horizontal)"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "polyglotVirtualFiles",
                    "name": "Poly Virtual Files",
                    "when": "resourceExtname == .poly",
                    "icon": "$(files)"
                }
            ]
        },
        "menus": {
            "editor/title": [
                {
                    "command": "polyglot.toggleView",
                    "when": "resourceExtname == .poly",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "command": "polyglot.build",
                "key": "ctrl+shift+b",
                "when": "resourceExtname == .poly"
            },
            {
                "command": "polyglot.run",
                "key": "ctrl+shift+r",
                "when": "resourceExtname == .poly"
            },
            {
                "command": "polyglot.toggleView",
                "key": "ctrl+shift+v",
                "when": "resourceExtname == .poly"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "bundle": "bundle.bat"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.75.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    }
}